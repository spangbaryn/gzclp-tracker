#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "🔍 Running pre-push checks..."

# Run linting
echo "📝 Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ ESLint failed. Please fix linting errors before pushing."
  exit 1
fi

# Run build to check for TypeScript errors
echo "🔨 Running build..."
npm run build
if [ $? -ne 0 ]; then
  echo "❌ Build failed. Please fix TypeScript errors before pushing."
  exit 1
fi

echo "✅ All checks passed! Pushing to remote..."